@use "functions" as *;

@mixin header-text {
  font-family: var(--paragraph-font);
}

@mixin normal-text {
  font-size: #{fluid(16px, 18px)};
  font-family: var(--paragraph-font);
}

@mixin small-text {
  font-size: #{fluid(12px, 14px)};
  font-family: var(--paragraph-font);
}

$line-height-regular: 1.6;
$line-height-small: 1.2;

@supports (font-size-adjust: 1) {
  article {
    font-size-adjust: 0.5;
  }
}

h2, h3, h4, h5, h6 {
  @include header-text;
  font-style: italic;
  font-weight: bold;
}

h1 {
  font-size: #{fluid(24px, 40.0px)};
  font-weight: bold;
  margin-top: 4rem;
}

h2 {
  font-size: #{fluid(20.9659px, 26.6983px)};
}

h3 {
  font-size: #{fluid(18.3154px, 21.9219px)};
}

h4 {
  font-size: #{fluid(16px, 18px)};
}

p, blockquote, del, dfn, q, dl, dt, dd,
ol, ul, li, label, legend, table, caption,
tbody, tfoot, thead, tr, th, td {
  @include normal-text;
}

strong, dt {
  font-weight: bold;
}

em, blockquote, cite {
  font-style: italic;
}

a {
  text-decoration: underline;
  color: var(--body-text);
}

article table {
  @include small-text;
  border-spacing: #{fluid(16px, 30px)} #{fluid(16px, 18px)};
  > * {
    vertical-align: top;
  }
  thead, tbody {
    tr {
      border-bottom: 1px solid var(--body-text);

      &:nth-child(even) {
        background-color: gray;
      }
    }
  }
  thead {
    tr {
      th {
        text-align: left;
        font-weight: bold;
        background-color: var(--body-text);
        color: var(--background);
      }
    }
  }
  tbody {
    tr {
    }
    td {

    }
  }
}

.external {
  text-decoration-style: dotted;
}

abbr {
  font-family: var(--header-font);
}

figure {
  text-align: center;
}

figcaption {
  @include small-text;
}

ul, ol, dd {
  padding-inline-start: #{fluid(32px, 36px)};
}

li p {
  margin: 0;
}

p, h1, h2, h3, h4, h5, h6, li, dd, dt, figcaption {
  -webkit-hyphens: auto;
  -moz-hyphens: auto;
  -ms-hyphens: auto;
  hyphens: auto;
}

article hr {
  border: none;
  &:before {
    content: '***';
    display: block;
    text-align: center;
  }
}

.information {
  ul, ol, li, p {
    @include small-text;
  }
}

.photo-info {
  .title {
    @include normal-text;
    font-style: italic;
    font-weight: bold;
  }
  p {
    @include small-text;
    font-family: var(--tab-font);
  }
  .content {
    line-height: 3;
    text-orientation: upright;
    writing-mode: vertical-rl;
  }
}
